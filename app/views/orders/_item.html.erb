<article class="product">
  <% product = Product.find_by id: item.product_id %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <span><%= product.description %></span>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= item.quantity %>
    </td>
    <td>
      <%= item.total_price %>
    </td>
  </tr>
</article>